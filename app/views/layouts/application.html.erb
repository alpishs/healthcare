<script type="text/javascript">
	$(function(){
	   var flashDurationInSeconds = 3;
	   var flashContainerId = 'flash-messages';

	   function removeFlashMessages() {
	     $('#' + flashContainerId).remove();
	   }

	   setTimeout(removeFlashMessages, flashDurationInSeconds * 1000);
	})
</script>