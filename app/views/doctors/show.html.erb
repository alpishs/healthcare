<div style="margin-left:2%;margin-top: 2%;">  
  <p>
    <strong>First name:</strong>
    <%= @doctor.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= @doctor.last_name %>
  </p>

  <p>
    <strong>City:</strong>
    <%= @doctor.city %>
  </p>

  <p>
    <strong>Username:</strong>
    <%= @doctor.username %>
  </p>

  <p>
    <strong>Password:</strong>
    <%= @doctor.password %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @doctor.address %>
  </p>

  <%= link_to 'Edit', edit_doctor_path(@doctor), class: 'btn btn-primary'  %>    |
  <%= link_to 'Back', doctors_path, class: ' btn btn-secondary'  %> | 
  <%= link_to 'Destroy', doctor_path(@doctor), method: :delete, data: { confirm: 'Are you sure you want to delete this doctor record?' }, class: 'btn btn-warning'  %>
</div>