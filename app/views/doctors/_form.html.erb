<%= form_with(model: doctor, class: 'form-horizontal pure-form pure-form-aligned', local: true) do |form| %>
  <% if doctor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(doctor.errors.count, "error") %> prohibited this doctor from being saved:</h2>

      <ul>
      <% doctor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :first_name, class: "control-label col-sm-2" %>    
    <div class="col-sm-4">
      <%= form.text_field :first_name, id: :doctor_first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :last_name , class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <%= form.text_field :last_name, id: :doctor_last_name , class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :city , class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <%= form.text_field :city, id: :doctor_city , class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :username , class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <%= form.text_field :username, id: :doctor_username , class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :password , class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <%= form.password_field :password, id: :doctor_password , class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :address , class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <%= form.text_area :address, id: :doctor_address , class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit 'submit', :class => 'btn btn-primary'%> | 
    <%= link_to 'Back', doctors_path, class: 'btn btn-secondary'  %>
  </div>
<% end %>