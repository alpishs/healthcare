<div style="margin-left:2%;margin-top: 2%;">  

  <h1>Doctors | <%= link_to 'New Doctor', new_doctor_path, class: 'btn btn-primary'  %></h1> 

  <table id="doctors-records" class="table table-striped table-bordered" style="width: 1000px;">
    <thead>
      <th>ID</th>
      <th>First name</th>
      <th>Last name</th>
      <th>City</th>
      <th>Username</th>
      <th>Password</th>
      <th>Address</th>
    </thead>

    <tbody>
      <% @doctors.each do |doctor| %>
        <tr class="<%= cycle('pure-table-odd', '') -%>">
          <td>    <%= link_to doctor_path(doctor.id) do %>
<%= doctor.id %> <%end%></td>
          <td><%= doctor.first_name %></td>
          <td><%= doctor.last_name %></td>
          <td><%= doctor.city %></td>
          <td><%= doctor.username %></td>
          <td><%= doctor.password %></td>
          <td><%= doctor.address %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>  

<script type="text/javascript">
  $(document).ready(function() {
    $('#doctors-records').DataTable();
  });
</script>