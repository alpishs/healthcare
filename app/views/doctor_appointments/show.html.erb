<div style="margin-left:2%;margin-top: 2%;">    
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Description:</strong>
    <%= @doctor_appointment.description %>
  </p>

  <p>
    <strong>From:</strong>
    <%= @doctor_appointment.from %>
  </p>

  <p>
    <strong>To:</strong>
    <%= @doctor_appointment.to %>
  </p>

  <p>
    <strong>Doctor:</strong>
    <%= @doctor_appointment.doctor.first_name%>&nbsp;<%= @doctor_appointment.doctor.last_name%>
    (Id:<%= @doctor_appointment.doctor_id %>)
  </p>

  <p>
    <strong>User:</strong>
    <%= @doctor_appointment.user.first_name%>&nbsp;<%= @doctor_appointment.user.last_name%>
    (Id:<%= @doctor_appointment.user_id %>)
  </p>

  <%= link_to 'Edit', edit_doctor_appointment_path(@doctor_appointment), class: 'btn btn-primary'  %> |
  <%= link_to 'Back', doctor_appointments_path, class: ' btn btn-secondary'  %> | 
  <%= link_to 'Destroy', doctor_appointment_path(@doctor_appointment), method: :delete, data: { confirm: 'Are you sure you want to delete the appointment?' }, class: 'btn btn-warning'  %>

</div>
