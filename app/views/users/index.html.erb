<div style="margin-left:2%;margin-top: 2%;">
  <h1>Users | <%= link_to 'New User', new_user_path, class: 'btn btn-primary'  %></h1>

  <table id="users-records" class="table table-striped table-bordered" style="width: 1000px;">
    <thead>
      <tr class="<%= cycle('pure-table-odd', '') -%>">
        <th>ID</th>
        <th>First name</th>
        <th>Last name</th>
        <th>City</th>
        <th>Username</th>
        <th>Password</th>
        <th>Address</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr class="<%= cycle('pure-table-odd', '') -%>">
          <td>    <%= link_to user_path(user.id) do %>
<%= user.id %> <%end%></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.city %></td>
          <td><%= user.username %></td>
          <td><%= user.password %></td>
          <td><%= user.address %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#users-records').DataTable();
  });
</script>