<div style="margin-left:2%;margin-top: 2%;">  
  
  <p>
    <strong>Name:</strong>
    <%= @medicine.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @medicine.description %>
  </p>

  <p>
    <strong>Type:</strong>
    <%= @medicine.medicine_type %>
  </p>

  <p>
    <strong>Is acidic:</strong>
    <%= @medicine.is_acidic %>
  </p>

  <p>
    <strong>Infant safe:</strong>
    <%= @medicine.infant_safe %>
  </p>

  <%= link_to 'Edit', edit_medicine_path(@medicine), class: 'btn btn-primary'  %> |
  <%= link_to 'Back', medicines_path, class: 'btn btn-secondary'  %> | 
  <%= link_to 'Destroy', medicine_path(@medicine), method: :delete, data: { confirm: 'Are you sure you want to delete this record?' }, class: 'btn btn-warning'  %>
</div>